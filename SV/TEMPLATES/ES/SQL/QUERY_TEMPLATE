[INSERT]
service=INSERT INTO ESB_SERVICE (ID,CODE,NAME,RCD_STATUS) VALUES (ESB_SERVICE_SEQ.NEXTVAL,'%SERVICE_CODE%','%SERVICE_NAME%','1');  
capability=INSERT INTO ESB_CAPABILITY (ID,SERVICE_ID,CODE,NAME,RCD_STATUS) VALUES (ESB_CAPABILITY_SEQ.NEXTVAL,( SELECT ID FROM ESB_SERVICE WHERE CODE = '%SERVICE_CODE%'),'%CAPABILITY_CODE%','%CAPABILITY_NAME%','1');  
capability_check=INSERT INTO ESB_CAPABILITY_CHECK (ID,CAPABILITY_ID,CHECK_INDICATOR,RCD_STATUS) VALUES (ESB_CAPABILITY_CHECK_SEQ.NEXTVAL,( SELECT ID FROM ESB_CAPABILITY WHERE CODE = '%CAPABILITY_CODE%'),'0','1');  
logger_error=INSERT INTO ESB_PARAMETER (KEY,VALUE,RCD_STATUS) VALUES ('Logger.error.IsEnabled.%SERVICE_CODE%.%SERVICE_NAME%.%CAPABILITY_NAME%','1','1'); 
logger_log=INSERT INTO ESB_PARAMETER (KEY,VALUE,RCD_STATUS) VALUES ('Logger.log.IsEnabled.%SERVICE_CODE%.%SERVICE_NAME%.%CAPABILITY_NAME%','1','1'); 

[DELETE]
logger_error=DELETE ESB_PARAMETER WHERE KEY = 'Logger.error.IsEnabled.%SERVICE_CODE%.%SERVICE_NAME%.%CAPABILITY_NAME%'; 
logger_log=DELETE ESB_PARAMETER WHERE KEY = 'Logger.log.IsEnabled.%SERVICE_CODE%.%SERVICE_NAME%.%CAPABILITY_NAME%'; 
capability_check=DELETE ESB_CAPABILITY_CHECK WHERE CAPABILITY_ID = (SELECT ID FROM ESB_CAPABILITY WHERE CODE = '%CAPABILITY_CODE%'); 
capability=DELETE ESB_CAPABILITY WHERE CODE = '%CAPABILITY_CODE%'; 
service=DELETE ESB_SERVICE WHERE CODE = '%SERVICE_CODE%'; 