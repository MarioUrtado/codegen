<process name="AdmisionError"
               targetNamespace="http://www.entel.cl/DC_SC_ErrorManager/AdmissionHospital/AdmisionError"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://www.entel.cl/DC_SC_ErrorManager/AdmissionHospital/AdmisionError"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
               xmlns:ui="http://xmlns.oracle.com/soa/designer"
               xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/DC_SC_ErrorManager/AdmissionHospital/ESB_ERROR_CONVERSATION_Poling"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/top/ESB_ERROR_CONVERSATION_Poling"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:ess="http://xmlns.oracle.com/scheduler" xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:ns3="http://xmlns.oracle.com/pcbpel/adapter/db/DC_SC_ErrorManager/AdmissionHospital/CALL_SP_ERROR_DERIVATION"
         xmlns:ns4="http://xmlns.oracle.com/pcbpel/adapter/db/sp/CALL_SP_ERROR_DERIVATION">
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <import namespace="http://xmlns.oracle.com/pcbpel/adapter/db/DC_SC_ErrorManager/AdmissionHospital/ESB_ERROR_CONVERSATION_Poling"
          location="../WSDLs/ESB_ERROR_CONVERSATION_Poling.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"
          ui:processWSDL="true"/>
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="ESB_ERROR_CONVERSATION_Poling" partnerLinkType="ns1:ESB_ERROR_CONVERSATION_Poling_plt"
                 myRole="ESB_ERROR_CONVERSATION_Poling_role"/>
    <partnerLink name="CALL_SP_ERROR_DERIVATION" partnerLinkType="ns3:CALL_SP_ERROR_DERIVATION_plt"
                 partnerRole="CALL_SP_ERROR_DERIVATION_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="ns1:EsbErrorConversationCollection_msg"/>

  </variables>
  <faultHandlers>
    <catchAll>
      <throw name="ThrowRollBack" faultName="bpelx:rollback"/>
    </catchAll>
  </faultHandlers>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in AdmisionError.wsdl) -->
    <receive name="receiveInput" partnerLink="ESB_ERROR_CONVERSATION_Poling"
             portType="ns1:ESB_ERROR_CONVERSATION_Poling_ptt" operation="receive" variable="inputVariable" createInstance="yes"/>
    <scope name="Scope1">
      <forEach parallel="no" counterName="index" name="ForEach">
        <startCounterValue>1</startCounterValue>
        <finalCounterValue expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">count($inputVariable.EsbErrorConversationCollection/ns2:EsbErrorConversation)</finalCounterValue>
        <scope name="Scope2">
          <variables>
            <variable name="Request_SP_ERROR_DERIVATION" messageType="ns3:args_in_msg"/>
            <variable name="Response_SP_ERROR_DERIVATION" messageType="ns3:args_out_msg"/>
          </variables>
          <sequence name="Sequence1">
            <assign name="Create_Request_SP_ERROR_DERIVATION">
              <copy>
                <from>$inputVariable.EsbErrorConversationCollection/ns2:EsbErrorConversation[$index]/ns2:messageTxId</from>
                <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$Request_SP_ERROR_DERIVATION.InputParameters/ns4:P_MESSAGE_TX_ID</to>
              </copy>
              <copy>
                <from>$inputVariable.EsbErrorConversationCollection/ns2:EsbErrorConversation[$index]/ns2:canErrId</from>
                <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$Request_SP_ERROR_DERIVATION.InputParameters/ns4:P_CAN_ERR_ID</to>
              </copy>
              <copy>
                <from>$inputVariable.EsbErrorConversationCollection/ns2:EsbErrorConversation[$index]/ns2:capabilityId</from>
                <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$Request_SP_ERROR_DERIVATION.InputParameters/ns4:P_CAPABILITY_ID</to>
              </copy>
            </assign>
            <invoke name="Invoque_SP_ERROR_DERIVATION"
                    partnerLink="CALL_SP_ERROR_DERIVATION" portType="ns3:CALL_SP_ERROR_DERIVATION_ptt"
                    operation="CALL_SP_ERROR_DERIVATION" inputVariable="Request_SP_ERROR_DERIVATION"
                    bpelx:invokeAsDetail="no" outputVariable="Response_SP_ERROR_DERIVATION"/>
          </sequence>
        </scope>
      </forEach>
    </scope>
  </sequence>
</process>